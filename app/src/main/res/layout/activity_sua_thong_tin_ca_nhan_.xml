<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.SuaThongTinCaNhan_Activity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:background="@color/colorMan"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ImageViewBackTTCN"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/TextViewTitle"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="Thông tin cá nhân"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/account"
            app:civ_border_width="2dp"
            app:civ_border_color="#61CCCCCC"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_edit_ttcn"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <EditText
                android:layout_margin="1dp"
                android:background="#F8F8FF"
                android:id="@+id/EditName"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/user"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:hint="Tên"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/ImageName"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_edit_ttcn"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/EditPhone"
                android:background="@drawable/custom_edit_ttcn"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/phone"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:text="Số điện thoại"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/ImagePhone"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_edit_ttcn"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <EditText
                android:layout_margin="1dp"
                android:id="@+id/EditEmail"
                android:background="@drawable/custom_edit_ttcn"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/mail"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:hint="Email"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/ImageEmail"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_edit_ttcn"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <EditText
                android:layout_margin="1dp"
                android:id="@+id/EditPlace"
                android:background="@drawable/custom_edit_ttcn"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/pin"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:hint="Địa chỉ"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/ImageDiaChi"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_edit_ttcn"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/EditPass"
                android:background="@drawable/custom_edit_ttcn"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/lock"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:text="Mật khẩu"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/ImagePass"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/Button"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="17sp"
                android:gravity="center"
                android:textColor="#CDC9C9"
                android:text="Áp dụng thay đổi"
                android:background="#83D9D9D9"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>